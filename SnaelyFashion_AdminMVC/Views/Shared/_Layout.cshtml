@using Microsoft.AspNetCore.Http
@using SnaelyFashion_Utility
@inject IHttpContextAccessor HttpContextAccessor

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpAcc
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SnaelyFashion_AdminMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SnaelyFashion_AdminMVC.styles.css" asp-append-version="true" />
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.2.1/css/dataTables.dataTables.css" />
<script src="https://cdn.tiny.cloud/1/aapbbd97trp1p5ssoxyob6tnenwu3kkw45by5p10aorvxqsq/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />



<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-hurricane"></i>Snaely</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                            <li class="nav-item">
                                <a class="nav-link"  asp-controller="Order" asp-action="Index">Manage Order</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link bg-black dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Managment
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item"  asp-controller="Category" asp-action="Index">Category</a>
                                    </li>
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-controller="SubCategory" asp-action="Index">SubCategory</a>
                                </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item"  asp-controller="Product" asp-action="Index">Product</a>
                                    </li>
                                   
                                    <li><hr class="dropdown-divider"></li>
                                   
                                    <li class="nav-item">
                                        <a class="dropdown-item"  asp-controller="User" asp-action="Index">Manage User</a>
                                    </li>

                                </ul>
                            </li>

                    

                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>


                        <li></li>


                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="register">Register</a>
                        </li>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-black text-muted">
        <div class="container">
            &copy; 2024 - Snaely- <a  asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

   
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tiny.cloud/1/opxs6dnrnidagy3munsh05o9upf1xpadf8d8h67edq6ddp72/tinymce/6/tinymce.min.js" referrerpolicy="origin">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
